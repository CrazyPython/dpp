name "dpp"
description "Include C/C++ headers directly in D files"
authors "Atila Neves"
copyright "Copyright Â© 2017-2018, Atila Neves"
license "boost"

targetType "executable"
targetPath "bin"
targetName "d++"
dflags "-dip25"

dependency "libclang" version="~>0.0.12"
dependency "sumtype" version="~>0.4.0"


configuration "executable" {
    dflags "-dip1000" platform="dmd"
    mainSourceFile "source/main.d"
}


configuration "library" {
    targetType "library"
    excludedSourceFiles "source/main.d"
}


configuration "unittest" {
    targetName "ut"
    mainSourceFile "tests/test_main.d"
    sourcePaths "source" "tests"
    importPaths "source" "tests"
    excludedSourceFiles "source/main.d"
    dependency "unit-threaded" version="*"
}

configuration "dpp2" {
    targetNAme "dpp2"
    mainSourceFile "tests/test_main.d"
    sourcePaths "dpp2/source" "dpp2/tests"
    importPaths "dpp2/source" "dpp2/tests"
    excludedSourceFiles "source/main.d"
    dependency "unit-threaded" version="*"
    versions "dpp2"
}
