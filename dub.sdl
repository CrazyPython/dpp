name "include"
description "Include C/C++ headers directly in D files for preprocessing"
authors "Atila Neves"
copyright "Copyright Â© 2017, Atila Neves"
license "boost"
targetType "executable"
targetPath "bin"
dflags "-dip25" "-dip1000"


configuration "executable" {
}


configuration "unittest" {
    targetType "executable"
    targetName "ut"
    mainSourceFile "ut.d"
    excludedSourceFiles "source/main.d"
    dependency "unit-threaded" version="~>0.7.0"
    versions "testingExcelD"
}


configuration "ut" {
    targetType "executable"
    targetName "utl"
    mainSourceFile "ut.d"
    excludedSourceFiles "source/main.d"
    dependency "unit-threaded" version="~>0.7.0"
    versions "unitThreadedLight"
}
